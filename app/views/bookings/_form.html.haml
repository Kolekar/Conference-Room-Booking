= form_for @booking, url: @url do |f|
  - if @booking.errors.any?
    #error_explanation
      %h2
        = pluralize(@booking.errors.count, "error")
        prohibited this booking from being saved:
      %ul
        - @booking.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :room_id
    %br/
    = f.number_field :room_id
  .field
    = f.label :user_id
    %br/
    = f.number_field :user_id
  .field
    = f.label :start_time
    %br/
    = f.datetime_select :start_time
  .field
    = f.label :end_time
    %br/
    = f.datetime_select :end_time
  .field
    = f.label :invite_email
    %br/
    = f.text_field :invite_email
  .actions
    = f.submit
