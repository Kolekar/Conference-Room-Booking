= form_for(@holiday) do |f|
  - if @holiday.errors.any?
    #error_explanation
      %h2
        = pluralize(@holiday.errors.count, "error")
        prohibited this holiday from being saved:
      %ul
        - @holiday.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :date
    %br/
    = f.date_select :date
  .field
    = f.label :reason
    %br/
    = f.text_field :reason
  .actions
    = f.submit
